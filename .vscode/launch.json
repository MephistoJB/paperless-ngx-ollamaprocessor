{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python-Debugger: Aktuelle Datei",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Debug Remote",
      "type": "python",
      "request": "attach",
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/app"
        }
      ],
      "port": 5679,
      "host": "127.0.0.1",
    }
  ]
}